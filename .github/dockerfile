FROM maven:3.8-openjdk-17 as build
WORKDIR /usr/src
COPY . .

RUN RUN --mount=type=secret,id=github_token,dst=/app/secret_github_token,required=true,uid=10001 \
        export GITHUB_TOKEN=$(cat /app/secret_github_token) && \
    mvn --batch-mode --update-snapshots --settings ci/github-settings.xml verify

FROM openjdk:17
WORKDIR /srv
COPY --from=build /usr/src/agrirouter-middleware-application/target/agrirouter-middleware.jar .

CMD java -jar /srv/agrirouter-middleware.jar